<div class="content__title">
  <h1 class="level1-heading">
    <span class="level1-heading__inner">メモ表示</span>
  </h1>
</div>

<div class="content__text">
  <div class="input">
    <h2 class="input__label level2-heading">メモID</h2>
    <p class="input__text"><%= @memo_id %></p>
  </div>

  <div class="input">
    <h2 class="input__label level2-heading">タイトル</h2>
    <p class="input__text"><%= h @result_hash["title"] %></p>
  </div>

  <div class="input">
    <h2 class="input__label level2-heading">内容</h2>
    <p class="input__text"><%= h @result_hash["body"] %></p>
  </div>
</div>

<div class="content__btn">
  <ul class="horizontal-btn-list">
    <li class="horizontal-btn-list__item">
      <form action="/memos/<%= @memo_id %>/edit" method="get">
        <input class="horizontal-btn-list__btn rounded-btn rounded-btn_warning" type="submit" value="メモ変更">
      </form>
    </li>
    <li class="horizontal-btn-list__item">
      <form action="/memos/<%= @memo_id %>" method="post">
        <input type="hidden" name="_method" value="DELETE">
        <input class="horizontal-btn-list__btn rounded-btn rounded-btn_alert" type="submit" value="メモ削除">
      </form>
    </li>
  </ul>
</div>
