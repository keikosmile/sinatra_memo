<header id="pageHead">
  <div id="pageHeadTitle">
    <div id="siteTitleText">
      <h1 id="siteTitle"><%= settings.app_title %></h1>
      <p id="catchcopy">メモ帳として使えるメモアプリです。</p>
    </div>
    <div id="siteTitleImage">
      <img src="/images/memo.jpg" alt="" width="50" height="55" >
    </div>
  </div>

  <nav id="localNavi">
    <ul>
      <li><a href="/" >ホーム</a></li>
      <li><a href="/about">アプリについて</a></li>
    </ul>
  </nav>
</header>

<section class="detailHead">
  <h1 class="pageTitle">メモ変更</h1>
</section>

<section>
  <section>
    <h2>メモID</h2>
    <%= @memo_id %>
  </section>

  <form action="/memos/<%= @memo_id %>" method="post">
    <section>
      <h2>タイトル</h2>
      <input type="text" name="title" value="<%= @result_hash["title"] %>"><br>
    </section>

    <section>
      <h2>本文:</h2>
      <textarea name="body" cols="60" rows="5"><%= @result_hash["body"] %></textarea>
    </section>

    <section>
      <input type="hidden" name="_method" value="PATCH">
      <input type="submit" value="メモ変更">
    </section>
  </form>
</section>
