<!-- タイトル -->
<div class="content__title">
  <h1 class="level1-heading">
    <span class="level1-heading__inner">メモ変更</span>
  </h1>
</div>
<!--/.content__title -->

<!-- コンテンツ インプット -->
<div class="content__input">
  <!-- インプット -->
  <div class="input">
    <h2 class="input__label level2-heading">メモID</h2>
    <p class="input__text"><%= @memo_id %></p>
  </div>
  <!-- /.input -->

  <!-- .js-2input -->
  <div class="js-2input">
    <form action="/memos/<%= @memo_id %>" method="post">

      <!-- インプット -->
      <div class="input">
        <h2 class="input__label level2-heading">タイトル</h2>
        <input class="js-2input__input-title input__input rounded-input" type="text" name="title" value="<%= @result_hash["title"] %>">
        <div class="js-2input__judge-title input__text">
          <span class="js-2input__count-title">0</span>/30</div>
      </div>
      <!-- /.input -->

      <!-- インプット -->
      <div class="input">
        <h2 class="input__label level2-heading">内容</h2>
        <textarea class="js-2input__input-body input__input rounded-textarea" name="body" rows="10"><%= @result_hash["body"] %></textarea>
        <div class="js-2input__judge-body input__text">
          <span class="js-2input__count-body">0</span>/500</div>
      </div>
      <!-- /.input -->

      <input type="hidden" name="_method" value="PATCH">
      <input class="js-2input__btn rounded-btn rounded-btn_warning" type="submit" value="メモ変更">
    </form>
    <script src="/js/input_limit.js"></script>
  </div>
  <!-- /.js-2input -->
</div>
<!--/.content__input -->
