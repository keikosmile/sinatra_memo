<h1 class="level1-heading">
  <span class="level1-heading__inner">ホーム</span>
</h1>

<div id="table-top" class="cross-table">
  <table class="cross-table__inner">
    <thead class="cross-table__headers">
      <tr class="cross-table__header-row">
        <th class="cross-table__header cross-table__header--md-sticky">メモID</th>
        <th class="cross-table__header">タイトル</th>
        <th class="cross-table__header">内容</th>
      </tr>
    </thead>
    <tbody class="cross-table__body">
      <% unless @result_hash.empty? %>
        <% @result_hash.each do |k, v| %>
          <% memo_id = k %>
          <% title = v["title"] %>
          <% body = v["body"] %>
          <tr class="cross-table__body-row js_table_body_row" data-href="/memos/<%= memo_id %>">
            <td class="cross-table__text cross-table__header--md-sticky"><%= memo_id %></td>
            <td class="cross-table__text"><%= h title %></td>
            <td class="cross-table__text"><%= h body %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

<form action="/memos/new" method="get">
  <input class="rounded-btn" type="submit" value="メモ新規作成">
</form>

<span class="before-icon before-icon--chevron-up">
  <a class="table-top" href="#table-top">表の先頭へ戻る</a>
</span>

