<header id="pageHead">
  <div id="pageHeadTitle">
    <div id="siteTitleText">
      <h1 id="siteTitle"><%= settings.app_title %></h1>
      <p id="catchcopy">メモ帳として使えるメモアプリです。</p>
    </div>
    <div id="siteTitleImage">
      <img src="/images/memo.jpg" alt="" width="50" height="55" >
    </div>
  </div>

  <nav id="localNavi">
    <ul>
      <li><a class="current" href="/" >ホーム</a></li>
      <li><a href="/about">アプリについて</a></li>
    </ul>
  </nav>
</header>

<section class="detailHead">
  <h1 class="pageTitle">ホーム</h1>
</section>

<section>
  <section>
    <table>

      <thead>
        <tr>
          <th>メモID</th>
          <th>タイトル</th>
          <th>内容</th>
        </tr>
      </thead>

      <tbody>
        <% unless @result_hash.empty? %>
          <% @result_hash.each do |k, v| %>
            <% memo_id = k %>
            <% title = v["title"] %>
            <% body = v["body"] %>
            <tr>
              <th><%= memo_id %></th>
              <td><a href="/memos/<%= memo_id %>"><%= h title %></a></td>
              <td><%= h body %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>

    </table>
  </section>

  <section>
    <form action="/memos/new" method="get">
      <input type="submit" value="メモ新規作成">
    </form>
  </section>

  <p class="pagetop"><a href="#page">ページの先頭へ戻る</a></p>
</section>
